{namespace finscholar.collegepageview.templates}
{template .collegepage}
  {@param schoolName: string}
  {@param institutionType: string}
  {@param acceptanceRate: float}
  {@param averageACTScore: float}
  {@param totalCostAttendance: int}
  {@param netCostForFirstQuintile: int}
  {@param netCostForSecondQuintile: int}
  {@param netCostForThirdQuintile: int}
  {@param netCostForFourthQuintile: int}
  {@param netCostForFifthQuintile: int}
  {@param cumulativeMedianDebt: int}
  <div id="information">
    <div class="mdl-card__title">
      <h2 class="mdl-card__title-text">{$schoolName}</h2>
    </div>
    <div class="mdl-card__title">
      <h2 class="mdl-card__title-text">Academic Information</h2>
    </div>
    <div class="mdl-card__supporting-text">
      <b>Institution Type:</b> {$institutionType}
    </div> 
    <div class="mdl-card__supporting-text">
      <b>Acceptance Rate:</b> {$acceptanceRate}
    </div> 
    <div class="mdl-card__supporting-text">
      <b>Average ACT Score:</b> {$averageACTScore}
    </div>
    <div class="mdl-card__title">
      <h2 class="mdl-card__title-text">Financial Aid Information</h2>
    </div> 
    <div class="mdl-card__supporting-text">
      <b>Total Cost of Attendance:</b> ${$totalCostAttendance}
    </div> 
    <div class="mdl-card__supporting-text">
      <b>Net Cost for students with family incomes between
        $0-$30,000:</b> ${$netCostForFirstQuintile}
    </div> 
    <div class="mdl-card__supporting-text">
      <b>Net Cost for students with family incomes between
        $30,001-$48,000:</b> ${$netCostForSecondQuintile}
    </div>
    <div class="mdl-card__supporting-text">
      <b>Net Cost for students with family incomes between 
        $48,001-$75,000:</b> ${$netCostForThirdQuintile}
    </div>  
    <div class="mdl-card__supporting-text">
      <b>Net Cost for students with family incomes between
        $75,001-$110,000:</b> ${$netCostForFourthQuintile}
    </div> 
    <div class="mdl-card__supporting-text">
      <b>Net Cost for students with family incomes above 
        $110,000:</b> ${$netCostForFifthQuintile}
    </div>
    <div class="mdl-card__supporting-text">
      <b>Cumulative Median Student Debt right after 
      graduation:</b> ${$cumulativeMedianDebt}
    </div>  
  </div>
{/template}
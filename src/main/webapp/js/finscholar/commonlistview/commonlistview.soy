{namespace finscholar.commonlistview.templates}

{template .commonlistview}
  {@param pagetype : string}
  <div id="scroll-div">
    <ul id="table-body" class="mdl-list">
    </ul>
  <div id="status">
    {call .endoflist /}
  </div>
{/template}

{template .listitems}
  {@param batchofitems: [type: string,  
                         items: list<list<string>>]}
  {for $propsofoneitem in $batchofitems.items}
    <li class="{$batchofitems.type} mdl-list__item mdl-list__item--three-line" id={$propsofoneitem[0]}
        jsaction="commonlistview.clickAction;
        dblclick:commonlistview.doubleClickAction">
      <span class="mdl-list__item-primary-content">
        <i class="material-icons mdl-list__item-avatar" id="avatar">star</i>
        <span class="cell-name">{$propsofoneitem[1]}</span>
        <span class="mdl-list__item-text-body">
          {$propsofoneitem[3]}
        </span>
      </span>
      <span class="mdl-list__item-secondary-content side-prop">{$propsofoneitem[2]}</span>
    </li>
  {/for}
{/template}

{template .loading}
  <div class="mdl-spinner mdl-js-spinner is-active"></div>
  <p> Loading more items ... </p>
{/template}

{template .endoflist}
  <p> This is the end of the list. </p>
{/template}